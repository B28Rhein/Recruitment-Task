@model Recrutiment_Test.Models.AppUser
@{
    ViewData["Title"] = "Change password for Account " + Model.Id;
}
<h1>Change password for Account @Model.Id</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword" method="post">
            <input type="hidden" asp-for="Id" />
            <label class="form-label">New Password</label><br />
            <input type="text" id="newPassword" name="newPassword" class="form-text" /><br /><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /><br /><br />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Manage"><button class="btn-primary">Back</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
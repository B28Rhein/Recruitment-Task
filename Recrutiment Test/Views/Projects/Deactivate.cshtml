@{
    ViewData["Title"] = $"Deactivate {Model.Id}"; 
}
@model Project
<head>
    <script>
        function deactivation(deactivate) {
            document.getElementById("deactivate").value = deactivate
            document.getElementById("form1").submit();
        }
    </script>
</head>
<form asp-action="Deactivate" method="post" id="form1">
    <div>
        <input type="hidden" id="deactivate" name="deactivate" />
        <input type="hidden" name="ID" id="ID" value="@Model.Id" />
        <h3 class="text-center">Are you sure that you want to @(Model.Status ? "deactivate":"activate") project @Model.Id</h3>
        <br />
        <div>
            <div class="container">
                <div class="row">
                    <div class="col text-center">
                        <input type="button" name="yes" value="YES" class="btn btn-danger btn-lg" onclick="deactivation(true)" />
                    </div>
                    <div class="col text-center">
                        <input type="button" name="no" value="NO" class="btn btn-primary btn-lg" onclick="deactivation(false)" />
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    

</form>

@model Recrutiment_Test.Models.Employee
@{
    ViewData["Title"] = "Edit " + Model.FullName;
}
<h1>Edit @(Model.Id + " " + Model.FullName)</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <label class="form-label" >FullName</label><br />
            <input id="fullName" name="fullName" type="text" asp-for="FullName" /><br />
            <label>Subdivision</label>
            @Html.DropDownList("subdivision", ViewBag.Subdivision, "Select Subdivision", new { @class = "form-control" })
            <label class="form-label">Position</label>
            @Html.DropDownList("position", ViewBag.positions, "Select position", new { @class = "form-control" })
            <label class="form-label">Active</label>
            <input type="checkbox" name="Status" id="Active" asp-for="Status" /><br />

            <label class="form-label">Select Peoples Partner</label>
            @Html.DropDownList("peoplesPartner",
                     new SelectList(((EmployeeModel)ViewData["EmployeeModel"]).EmployeeList, "Value", "Text"),
                     "Select Peoples Partner",
                     new { @class = "form-control" })
            <label class="form-label">Out-of-Office Balance</label><br />
            <input id="oooBalance" name="oooBalance" type="number" min="0" asp-for="OutOfOfficeBalance" /><br /><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index"><button class="btn-primary">Back</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
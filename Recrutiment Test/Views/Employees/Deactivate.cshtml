@{
    ViewData["Title"] = $"Deactivate {Model.Id} {Model.FullName}"; 
}
@model Employee
<head>
    <script>
        function disactivation(deactivation) {
            document.getElementById("deactivation").value = deactivation
            document.getElementById("form1").submit();
        }
    </script>
</head>
<form asp-action="Deactivate" method="post" id="form1">
    <div>
        <input type="hidden" id="deactivation" name="deactivation" />
        <input type="hidden" name="ID" id="ID" value="@Model.Id" />
        <h3 class="text-center">Are you sure that you want to @(Model.Status ? "deactivate":"activate") employee @Model.Id @Model.FullName</h3>
        <br />
        <div>
            <div class="container">
                <div class="row">
                    <div class="col text-center">
                        <input type="button" name="yes" value="YES" class="btn btn-danger btn-lg" onclick="disactivation(true)" />
                    </div>
                    <div class="col text-center">
                        <input type="button" name="no" value="NO" class="btn btn-primary btn-lg" onclick="disactivation(false)" />
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    

</form>

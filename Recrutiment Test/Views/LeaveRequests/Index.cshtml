@{
    ViewData["Title"] = "Employees";
    string SortOrder = (string)ViewData["SortOrder"];
}
@model IEnumerable<Recrutiment_Test.Models.LeaveRequest>

<head>
    <script>
        function SetSort(SortOrder) {
            document.getElementById("Order").value = SortOrder;
            document.getElementById("form1").submit();
        }
    </script>
</head>

<h2>Leave Requests List</h2>
<table class="table">
    <thead>
        <tr>
            
            <th onclick="SetSort(@(SortOrder == "IDASC" ? "\"IDDESC\"" : "\"IDASC\""))">
                @Html.DisplayNameFor(model => model.Id)
                @(SortOrder == "IDASC" ? "↓" : "↑")
            </th>
            <th onclick="SetSort(@(SortOrder == "EMPASC" ? "\"EMPDESC\"" : "\"EMPASC\""))">
                @Html.DisplayNameFor(model => model.Employee)
                @(SortOrder == "EMPASC" ? "↓" : "↑")
            </th>
            <th onclick="SetSort(@(SortOrder == "ARASC" ? "\"ARDESC\"" : "\"ARASC\""))">
                @Html.DisplayNameFor(model => model.AbsenceReason)
                @(SortOrder == "ARASC" ? "↓" : "↑")
            </th>
            <th onclick="SetSort(@(SortOrder == "SDASC" ? "\"SDDESC\"" : "\"SDASC\""))">
                @Html.DisplayNameFor(model => model.StartDate)
                @(SortOrder == "SDASC" ? "↓" : "↑")
            </th>
            <th onclick="SetSort(@(SortOrder == "EDASC" ? "\"EDDESC\"" : "\"EDASC\""))">
                @Html.DisplayNameFor(model => model.EndDate)
                @(SortOrder == "EDASC" ? "↓" : "↑")
            </th>
            
            <th onclick="SetSort(@(SortOrder == "STSASC" ? "\"STSDESC\"" : "\"STSASC\""))">
                @Html.DisplayNameFor(model => model.Status)
                @(SortOrder == "STSASC" ? "↓" : "↑")
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @item.EmployeeNavigation.Id
                </td>
                <td>
                    @(((List<string>)ViewData["AbsenceReasons"])[@item.AbsenceReason])
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @(((List<string>)ViewData["Statuses"])[@item.Status])
                </td>
                <td>
                    @if(item.Status == 0)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id"><button class="btn-primary">Edit</button></a>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"><button class="btn-primary">Details</button></a>
                </td>
                <td>
                    @if(item.Status == 0)
                    {
                        <a asp-action="Submit" asp-route-id="@item.Id"><button class="btn-primary">Submit</button></a>
                        <a asp-action="Cancel" asp-route-id="@item.Id"><button class="btn-primary">Cancel</button></a>
                    }             
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="LeaveRequests" asp-action="AddLeaveRequest"><button class="btn-primary">Add new Leave Request</button></a>
<form asp-action="Index" method="get" id="form1">
    <input type="hidden" id="Order" name="Order" />
</form>


